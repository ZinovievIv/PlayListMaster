<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainActivity"  parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/radius_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">@dimen/offset_8</item>
        <item name="android:textSize">@dimen/size_22</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="TextClassicStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/offset_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="PanelHeaderStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/size_22</item>
        <item name="android:textColor">?attr/track</item>
    </style>
    <style name="OtherPanelHeaderStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/size_22</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="MySwitchStyle" parent = "Widget.AppCompat.CompoundButton.Switch">
    </style>
    <style name="NameAlbum">
        <item name="android:textColor">?attr/track</item>
        <item name="android:textSize">@dimen/size_11</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="NameTrack">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/offset_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextPlaceHolder">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/size_19</item>
    </style>

</resources>