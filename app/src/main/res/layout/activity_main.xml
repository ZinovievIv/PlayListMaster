<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/blue">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/offset_4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="@string/app_name"
            android:textSize="@dimen/size_22"
            android:paddingTop="@dimen/offset_10"
            android:paddingBottom="@dimen/offset_12"
            android:paddingStart="@dimen/offset_12"
            android:paddingEnd="@dimen/offset_62"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/offset_16"
        android:paddingBottom="@dimen/offset_26">


        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cornerRadius="@dimen/radius_16"
            android:layout_marginTop="@dimen/offset_16"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/search"
            android:textColor="@color/black"
            android:textSize="@dimen/size_22"
            app:icon="@drawable/ic_magnifier"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/offset_8"
            app:iconTint="@color/black"
            android:foreground="?attr/selectableItemBackground"/>



        <Button
            android:id="@+id/buttonMedia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/offset_16"
            android:layout_weight="1"
            app:cornerRadius="@dimen/radius_16"
            android:backgroundTint="@color/white"
            android:text="@string/mediaLibrary"
            android:textColor="@color/black"
            android:textSize="@dimen/size_22"
            app:icon="@drawable/ic_music"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/offset_8"
            app:iconTint="@color/black"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/offset_16"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/size_22"
            app:cornerRadius="@dimen/radius_16"
            app:icon="@drawable/ic_gearwheel"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/offset_8"
            app:iconTint="@color/black"
            android:foreground="?attr/selectableItemBackground"/>
    </LinearLayout>
</LinearLayout>
